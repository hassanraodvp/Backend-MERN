<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EJS</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <style>
    input {
      padding: 10px 20px;
      border: 1px solid #ccc;
    }
    label {
      margin: 20px 0 0 0;
      display: block;
    }
    a:hover {
      color: #a52e2e;
    }
    textarea {
      padding: 10px 20px;
      border: 1px solid #ccc;
    }
  </style>
  <body>
    <section class="min-h-screen bg-black text-white flex justify-center">
      <div class="container" style="margin: auto">
        <div class="flex justify-center">
          <form
            action="/create"
            method="post"
            class="bg-white text-black rounded-lg w-[90%] lg:w-1/3"
            style="padding: 20px"
          >
            <h1 class="text-2xl font-bold text-center">Create Task</h1>
            <label for="name">Title Name</label>
            <input
              type="text"
              name="title"
              placeholder="Title goes here.."
              class="w-full rounded-md outline-none"
            />
            <label for="msg">Message</label>
            <textarea
              name="msg"
              placeholder="Message"
              class="w-full rounded-md outline-none"
            ></textarea>
            <button
              type="submit"
              class="bg-blue-500 text-white rounded-md w-full cursor-pointer"
              style="padding: 10px 20px; margin-top: 20px"
            >
              Submit
            </button>
          </form>
        </div>
        <div class="flex w-full">
          <div
            class="flex flex-wrap gap-5"
            style="padding: 20px 10px; margin-top: 50px"
          >
            <% if (task.length > 0) { %> <% task.forEach((val) => { %>
            <div
              class="flex flex-col bg-white text-black rounded-lg"
              style="padding: 20px"
            >
              <h1 class="text-2xl font-bold"><%= val %></h1>

              <a
                href="/tasks/<%= val %>"
                class="font-bold text-blue-800 flex justify-center items-center rounded-md w-full cursor-pointer"
                style="padding-top: 5px"
                >Read Message</a
              >
              <a
                href="/edit/<%= val %>"
                class="font-bold flex items-center justify-center text-gray-300 bg-blue-500 text-white rounded-md w-full cursor-pointer hover:bg-black"
                style="padding: 5px; margin-top: 10px;"
                >Edit</a
              >
            </div>
            <% }) %> <% } else { %>
            <h2
              class="text-white text-center text-2xl"
              style="padding-top: 20px"
            >
              No Task's Yet
            </h2>
            <% } %>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
