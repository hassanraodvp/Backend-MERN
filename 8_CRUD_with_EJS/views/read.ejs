<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD with EJS</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <style>
    input {
      width: 100%;
      border: 1px solid #ccc;
      padding: 10px;
      border-radius: 5px;
      outline: none;
      margin: 5px 0;
    }
    @media only screen and (max-width: 1350px) {
      .container {
        padding-left: 25px !important;
        padding-right: 25px !important;
      }
    }
  </style>
  <body>
    <section class="min-h-screen bg-black text-white">
      <div class="container" style="margin: 0 auto">
        <div class="pt-5">
          <a
            href="/"
            class="underline text-white hover:text-gray-300 underline-offset-5"
            ><< Go Back To Home</a
          >
        </div>
        <div>
          <h1 class="text-4xl font-bold text-center pt-10">All Users</h1>
        </div>
        <div class="flex flex-wrap gap-5 pt-10">
          <% users.forEach(user => { %>
          <div
            class="flex flex-col px-4 py-2 bg-gray-300 text-black rounded-lg"
          >
            <div class="w-50 h-50 rounded-lg mx-auto">
              <img
                src="<%= user.image %>"
                alt="image"
                class="object-cover w-full h-full rounded-lg"
              />
            </div>
            <h2 class="pt-1 text-xl">
              <span class="pt-1 text-xl font-bold">Name:</span> <%= user.name %>
            </h2>
            <p class="pt-1 text-xl">
              <span class="pt-1 text-xl font-bold">Email:</span>
              <%= user.email %>
            </p>
            <p class="pt-1 text-xl">
              <span class="pt-1 text-xl font-bold">Password:</span> <%=
              user.password %>
            </p>
            <div class="flex justify-center gap-5 mt-3">
              <a
                href="/edit/<%= user._id %>"
                class="px-7 py-2 rounded-lg hover:bg-blue-500 text-white bg-blue-700"
                >Edit</a
              >
              <a
                href="/delete/<%= user._id %>"
                class="px-5 py-2 rounded-lg hover:bg-red-700 text-white bg-red-600"
                >Delete</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
  </body>
</html>
